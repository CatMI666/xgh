page {
    background: #F2F2F2;
    
}

.albums {
    padding:24rpx;
    font-size:32rpx;
}

.albums .album {
    margin-bottom:24rpx;
    padding:24rpx;
    background:#ffffff;
    position:relative;
}

.albums .album .name {
    font-size:36rpx;
    font-weight:bold;
}

.albums .album .photo-total {
    position: absolute;
    display:inline-block;
    top:16rpx;
    right:16rpx;
    background:#222222;
    color:#fff;
    font-size:28rpx;
    padding:0 16rpx;
    border-radius:6rpx;
}

.albums .album .update-time {
    font-size:28rpx;
    margin-top:10rpx;
    color:#666;
}